{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Profile",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": { "type": "string", "pattern": "^usr_[0-9a-f]{10}$" },
      "name": { "type": "string", "minLength": 1 },
      "age": { "type": ["integer","null"], "minimum": 17, "maximum": 120 },
      "gender": { "type": "string", "enum": ["male","female","nonbinary","other"] },
      "genderInterestedIn": {
        "type": "array",
        "items": { "type": "string", "enum": ["male","female","nonbinary","other"] },
        "minItems": 1,
        "uniqueItems": true
      },
      "location": { "type": "string", "minLength": 0 },
      "locationFlexibility": { "type": "string", "enum": ["none","some","high"] },
      "lastUpdated": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
      "profileUrl": { "type": "string", "format": "uri" }
    },
    "required": [
      "id","name","gender","genderInterestedIn",
      "location","locationFlexibility","lastUpdated","profileUrl"
    ]
  }
  