{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Date Me Directory Profile (Minimal)",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "name",
      "age",
      "gender",
      "genderInterestedIn",
      "location",
      "locationFlexibility",
      "lastUpdated"
    ],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the profile",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "description": "User’s name or display name",
        "minLength": 1,
        "maxLength": 100
      },
      "age": {
        "type": "integer",
        "description": "User’s age in years",
        "minimum": 18,
        "maximum": 120
      },
      "gender": {
        "type": "string",
        "enum": ["male", "female", "nonbinary"],
        "description": "Gender identity"
      },
      "genderInterestedIn": {
        "type": "array",
        "description": "Genders the user is interested in",
        "items": { "type": "string", "enum": ["male", "female", "nonbinary"] },
        "uniqueItems": true,
        "minItems": 1
      },
      "location": {
        "type": "string",
        "description": "Region of the user (city, country, or continent)",
        "minLength": 1,
        "maxLength": 100
      },
      "locationFlexibility": {
        "type": "string",
        "enum": ["none", "some", "flexible"],
        "description": "Willingness to relocate or connect across regions"
      },
      "lastUpdated": {
        "type": "string",
        "description": "Date when the profile was last updated (YYYY-MM-DD)",
        "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$"
      }
    }
  }
  